@model List<Department>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2> Department List </h2>
<a asp-action="Create" class="btn btn-primary"> Add New Department</a>
@if (Model.Count() > 0)
{

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>ID </td>
                <td>Name </td>
                <td>Department manger</td>
                <td> numberOfemp</td>
                <td>Action </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td> @item.Id </td>

                    <td> @item.Name </td>
                    <td> @item.MangerName</td>
                    <td> @item.numberOfemp</td>
                    <td>
                        <a asp-controller="Department" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sucess"> Details  </a>
                        <a asp-controller="Department" asp-action="Update" asp-route-id="@item.Id" class="btn btn-info"> Update  </a>
                        <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> Delete  </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="card bg-dark text-light">
        <h2>  No Emplyee Available </h2>
    </div>
}





