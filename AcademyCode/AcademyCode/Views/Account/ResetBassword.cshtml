@model ResetBasword
@{
    ViewData["Title"] = "ResetBasword";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<form asp-action="ResetBasword">
    <div asp-validation-summary="All"></div>
    <!-- Email input -->
        <input id="form3Example3" class="form-control form-control-lg" asp-for="Email" type="hidden"/>
        <input id="form3Example3" class="form-control form-control-lg" asp-for="Token" type="hidden"/>
    <div class="form-outline mb-4">
        <input id="form3Example3" class="form-control form-control-lg" asp-for="Password"
               placeholder="Enter a valid password" />
        <label class="form-label" for="form3Example3">Password</label>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-outline mb-4">
        <input id="form3Example3"  class="form-control form-control-lg" asp-for="ConfirmPassword"
               placeholder="Enter a ConfirmPassword" />
        <label class="form-label" for="form3Example3">ConfirmPassword</label>
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="text-center text-lg-start mt-4 pt-2">
        <input type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;" />
    </div>
</form>
