@model ForgotPassword
@{
    ViewData["Title"] = "ForgotBassword";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>ForgotBassword</h1>

<form asp-action = "ForgotBassword" >
                <div asp-validation-summary="All"></div>
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input  id="form3Example3" name ="Email" class="form-control form-control-lg"asp-for="Email"
                           placeholder="Enter a valid email address" />
                    <label class="form-label" for="form3Example3">Email address</label>
                    <span asp-validation-for="Email"></span>
                </div>
    <div class="text-center text-lg-start mt-4 pt-2">
        <input type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;" />
        </div>
</form>