@model List<Employee>


<h2> Employee List </h2>
<a asp-action="Create" class="btn btn-primary"> Add New Employee</a>
<form asp-action="Index" class="">
<div class=" container form-inline d-flex m-3 mt-3">
    <input  class="form-control" />
    <input type="submit" value="Search" class="btn btn-primary" />
</div>
</form>


@if (Model.Count() > 0)
 {
           
<table class="table table-striped table-hover">
    <thead>
        <tr> 
            <td >ID </td>
            <td >Name </td>
            <td>Image</td>
            <td>Phone number </td>
            <td>Start work </td>
            <td>Action </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
                <tr>
                 <td> @item.Id </td>
                    <td> @item.Name </td>
         
                    @if (@item.ImagePath is null)
                    {
                        <td> <i class="bi bi-person-circle iconAccount"></i></td>
                    }
                    else
                    {

                        <td> <img src="~/files/Images/@item.ImagePath" class="img-fluid w-50 h-50" /> </td>

                    }
                    <td> @item.phoncontact </td>
                    <td> @item.Datestart</td>
                    <td>
                        <a asp-controller="AcademyCode" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sucess"> Details  </a>
                        <a asp-controller="AcademyCode" asp-action="Update" asp-route-id="@item.Id" class="btn btn-info"> Update  </a>
                        <a asp-controller="AcademyCode" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> Delete  </a>
                    </td>
                </tr>
            }

    </tbody>
    </table>
}
else
{
   <div class="card bg-dark text-light">
        <h2>  No Emplyee Available </h2>
   </div>
}





